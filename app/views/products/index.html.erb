<h1>Products list.</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  Each grid item displays the name of the product, the brand name,
  the model number and the price
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.model %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td>
          <% if user_signed_in? %>
              <%= link_to 'Edit', edit_product_path(product) %>
          <% end %>
        </td>
        <td>
          <% if user_signed_in? %>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
        <td><a href="/cart/<%= product.id %>">Add to Cart</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
    <%= link_to 'New Product', new_product_path %>
<% end %>
